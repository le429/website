{#  To be used on the books.md page #}
{% if list_of_books %}
<ul class="books-list">
  {% for book in list_of_books %}
  <li>
    <img src="{{ book.pic }}" alt="{{ book.title }} par Patrick Cargnelutti"/>

    <div>
      <h2>{{ book.title }}</h2>
      <h3>{{ book.publisher }}, paru le {{ book.publication_date }}</h3>
      <p class="description">{{ book.description | parseMarkdown | safe }}</p>
      <a href="{{ book.url }}">Plus d'informations: {{ book.publisher }}</a>
    </div>
    
  </li>
  {% endfor %}
</ul>
{% endif %}